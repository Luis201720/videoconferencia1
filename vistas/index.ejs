       <input type="text" class="form-control" id='usuario' ng-model="reg.usuario" placeholder="USUARIO">
        <br>
        <input type="text" class="form-control" id="name" ng-model="reg.DisplayName" placeholder="Nombre:">
        <br>
        <input type="email" class="form-control" id='email' ng-model="reg.email" placeholder="Correo Electronico">
        <br>
        <input type="password" class="form-control"  id='password' ng-model="reg.password" placeholder="Password">
        </div>
      
      <div class="modal-footer">
       
        <button type="button" ng-click="register(reg)" class="btn btn-primary" >Registrarse</button>
      </div>
     
    </form>
    </div>
  </div>
</div>




<!-- Modal -->
